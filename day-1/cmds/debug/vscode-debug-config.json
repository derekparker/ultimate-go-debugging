    "version": "0.2.0",
    "configurations": [
        {
            "name": "Launch user input",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${file}",
            "console": "integratedTerminal" // <-- Change to use integrated terminal instead of debug console for user input.
        },
        {
            "name": "Run with args",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "args": [ // <-- Supply arguments to program we're debugging.
                "foobar"
            ]
        }
    ]
}