    "version": "0.2.0",
    "configurations": [
        {
            "name": "dlv debug",
            "type": "go",
            "request": "launch",
            "mode": "auto",
            "program": "${fileDirname}",
            "args": [
                "foobar"
            ]
        },
        {
            "name": "dlv attach",
            "type": "go",
            "request": "attach",
            "mode": "local",
            "program": "${fileDirname}",
        },
        {
            "name": "dlv connect",
            "type": "go",
            "debugAdapter": "dlv-dap", // `legacy` by default
            "request": "launch",
            "mode": "exec",
            "program": "/vagrant/bin/prog",
            "port": 4040,
        }
    ]
}